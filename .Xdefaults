### Cursor size ###
Xcursor.size: 18

### clean up urxvt, add keybinds ###
URxvt.intensityStyles: false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
# Xterm escape codes, word by word movement
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.iso14755: false
URxvt.iso14755_52: false
 
### fonts ###
URxvt.font:           xft:Fira Code Medium:autohint=true:size=13,
URxvt.boldFont:       xft:Fira Code Medium:autohint=true:bold:size=13,
URxvt.italicFont:     xft:Fira Code Medium:autohint=true:italic:size=13,
URxvt.boldItalicFont: xft:Fira Code Medium:autohint=true:bold:italic:size=13,

URxvt.font:           xft:Fira Code Medium:autohint=true:size=13, 
URxvt.letterSpace: 1

### terminal padding ###
URxvt.internalBorder: 25

### standard ###
URxvt.depth:                      32
URxvt.background: 		  rgba:1111/1111/1111/addd
URxvt*scrollBar:                  false
URxvt*mouseWheelScrollPage:       false
URxvt*cursorBlink:                true
URxvt*background:                 black
URxvt*foreground:                 grey
URxvt*saveLines:                  5000

# uncomment for transparent terminal if you are ready to be made fun of in #rice
!URxvt.transparent:    true
!URxvt.shading:        15
 
# make otf / ttf fonts look pretty.  does not matter if you are using a bitmap font.
Xft.dpi: 96
Xft.autohint: false
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
 
# clickable links, clipboard support, mouse wheel support, and on the fly font resizing
# you will need to install the relevent perl extensions for these to work
URxvt.perl-ext-common: default,matcher,clipboard,vtwheel,resize-font,url-select
URxvt.url-launcher: /usr/bin/vivaldi-stable
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5
 
