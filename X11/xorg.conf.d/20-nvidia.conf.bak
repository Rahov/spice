
Section "Device"
        Identifier      "Device0"
        Driver          "nvidia"
        VendorName      "NVIDIA Corporation"
        Option          "TripleBuffer"  "true" 
EndSection

Section "Monitor"
        Identifier      "Monitor0"
        Option          "Enable"        "true"
EndSection

Section "Screen"
        Identifier      "Screen0"
        Device          "Device0"
        Monitor         "Monitor0"
        DefaultDepth    24
        
        # fix tearing
        Option          "metamodes"     "nvidia-auto-select +0+0 { ForceFullCompositionPipeline = On }"
EndSection
